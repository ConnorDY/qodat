<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ToggleGroup?>
<BorderPane fx:id="mainPane" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="stan.qodat.scene.controller.MainController">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
    <center>
        <SplitPane fx:id="splitPlane" dividerPositions="0.5, 0.5" BorderPane.alignment="CENTER">
            <HBox fx:id="leftTab">
                <SplitPane fx:id="filesWindow" dividerPositions="0.75" orientation="VERTICAL">
                    <VBox fx:id="modelsContainer" styleClass="border-left"/>
                    <VBox styleClass="border-right">
                        <StackPane styleClass="scene-group">
                            <HBox fx:id="sceneHBox" maxWidth="Infinity" prefWidth="4000">
                                <Label fx:id="sceneLabel" prefWidth="150" styleClass="scene-label"
                                       text="Scene"/>
                                <HBox styleClass="hbox-float-right" BorderPane.alignment="CENTER_RIGHT"
                                      HBox.hgrow="ALWAYS">
                                    <ToggleButton fx:id="lockSceneContextButton" maxWidth="20"
                                                  styleClass="lock-scene-context-toggle"/>
                                    <ComboBox fx:id="sceneContextBox" prefWidth="200"
                                              styleClass="lock-scene-context-combo"/>
                                </HBox>
                            </HBox>
                        </StackPane>
                        <TreeView id="models-list" fx:id="sceneTreeView"/>
                    </VBox>
                </SplitPane>
            </HBox>
            <Pane fx:id="canvasPlaceHolder"/>
            <Accordion id="main-panel" fx:id="mainPanes">
                <panes>
                </panes>
            </Accordion>
        </SplitPane>
    </center>
    <top>
        <VBox BorderPane.alignment="CENTER">
            <HBox prefHeight="30.0" prefWidth="900.0">
                <MenuBar fx:id="menuBar" prefHeight="30.0" HBox.hgrow="ALWAYS">
                    <Menu mnemonicParsing="false" text="File">
                        <MenuItem mnemonicParsing="false" onAction="#loadModels" text="Load models"/>
                        <Menu mnemonicParsing="false" text="Set load path">
                            <MenuItem mnemonicParsing="false" onAction="#setLoadPath" text="Set load path"/>
                            <Menu fx:id="recentPathsMenu" mnemonicParsing="false" text="Recent paths"/>
                        </Menu>
                        <MenuItem mnemonicParsing="false" onAction="#setSavePath" text="Set save path"/>
                        <MenuItem mnemonicParsing="false" onAction="#setCachePath" text="Set cache path"/>
                    </Menu>
                    <Menu mnemonicParsing="false" text="Edit">
                        <MenuItem mnemonicParsing="false" onAction="#clearModels" text="Clear models"/>
                    </Menu>
                    <Menu mnemonicParsing="false" text="Help">
                        <MenuItem mnemonicParsing="false" text="About"/>
                    </Menu>
                </MenuBar>
                <ToolBar maxHeight="30.0">
                    <HBox id="playControls" fx:id="playControls" alignment="CENTER_RIGHT" prefHeight="17.0">
                        <padding>
                            <Insets right="22.0"/>
                        </padding>
                        <Button fx:id="startBtn" mnemonicParsing="false" prefHeight="14.0" text="|&lt;">
                            <graphic>
                                <Pane prefHeight="13.0" prefWidth="13.0"/>
                            </graphic>
                        </Button>
                        <Button fx:id="rwBtn" mnemonicParsing="false" prefHeight="14.0" text="&lt;&lt;">
                            <graphic>
                                <Pane prefHeight="13.0" prefWidth="13.0"/>
                            </graphic>
                        </Button>
                        <ToggleButton fx:id="playBtn" mnemonicParsing="false" prefHeight="14.0" text="&gt;">
                            <graphic>
                                <Pane prefHeight="13.0" prefWidth="13.0"/>
                            </graphic>
                        </ToggleButton>
                        <Button fx:id="ffBtn" mnemonicParsing="false" text="&gt;&gt;">
                            <graphic>
                                <Pane prefHeight="13.0" prefWidth="13.0"/>
                            </graphic>
                        </Button>
                        <Button fx:id="endBtn" mnemonicParsing="false" prefHeight="14.0" text="&gt;|">
                            <graphic>
                                <Pane prefHeight="13.0" prefWidth="13.0"/>
                            </graphic>
                        </Button>
                        <ToggleButton fx:id="loopBtn" mnemonicParsing="false" prefHeight="14.0"
                                      selected="true" text="R">
                            <graphic>
                                <Pane prefHeight="13.0" prefWidth="13.0"/>
                            </graphic>
                        </ToggleButton>
                    </HBox>
                </ToolBar>
            </HBox>
        </VBox>
    </top>
    <bottom>
        <VBox id="bottom-group" fx:id="bottomBox">
            <HBox>
                <VBox.margin>
                    <Insets left="25.0"/>
                </VBox.margin>
                <Group>
                    <fx:define>
                        <ToggleGroup fx:id="bottomGroup"/>
                    </fx:define>
                    <ToolBar styleClass="toggle-tab-pane">
                        <ToggleButton fx:id="bottomFramesTab" focusTraversable="false"
                                      styleClass="toggle-tab" text="Frames" toggleGroup="${bottomGroup}"/>
                    </ToolBar>
                </Group>
            </HBox>
            <HBox id="bottom" fx:id="progressSpace" alignment="CENTER" prefHeight="20.0">
                <Label fx:id="infoLabel"/>
            </HBox>
        </VBox>
    </bottom>
    <right>
        <VBox id="right-group">
            <Group>
                <fx:define>
                    <ToggleGroup fx:id="rightGroup"/>
                </fx:define>
                <ToolBar rotate="90.0" styleClass="toggle-tab-pane">
                    <ToggleButton fx:id="rightMainTab" focusTraversable="false" selected="true" styleClass="toggle-tab"
                                  text="Main" toggleGroup="${rightGroup}"/>
                    <ToggleButton fx:id="rightViewerTab" focusTraversable="false" styleClass="toggle-tab" text="Viewer"
                                  toggleGroup="${rightGroup}"/>
                    <ToggleButton fx:id="rightEditorTab" focusTraversable="false" styleClass="toggle-tab" text="Editor"
                                  toggleGroup="${rightGroup}"/>
                    <ToggleButton fx:id="rightPluginsTab" focusTraversable="false" styleClass="toggle-tab"
                                  text="Plugins" toggleGroup="${rightGroup}"/>
                </ToolBar>
            </Group>
        </VBox>
    </right>
    <left>
        <VBox id="left-group" BorderPane.alignment="CENTER">
            <fx:define>
                <ToggleGroup fx:id="leftGroup"/>
            </fx:define>
            <ToolBar rotate="90.0" styleClass="toggle-tab-pane">
                <ToggleButton fx:id="leftFilesTab" focusTraversable="false" prefWidth="42.0" selected="true"
                              styleClass="toggle-tab" text="Files" toggleGroup="${leftGroup}"/>
            </ToolBar>
        </VBox>
    </left>
</BorderPane>
